{
    "name": "SageMath CTF Development",
    "image": "mcr.microsoft.com/devcontainers/python:3.11-ubuntu-jammy",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers-contrib/features/conda:1": {}
    },
    "postCreateCommand": "conda install -c conda-forge sage -y",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "forwardPorts": [8888],
    "remoteUser": "root"
}
